@model ClienteDTO
@{
    ViewData["Title"] = "Error";
}
<form asp-action="Edit" asp-antiforgery="true" method="POST">
    <input asp-for="Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Nome"/>
    </div>
    <div class="form-group">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" placeholder="Cpf"/>
    </div>
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" placeholder="Telefone"/>
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary"/>
</form> 